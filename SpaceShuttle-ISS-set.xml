<?xml version="1.0"?>

<!-- this puts the Shuttle into a high orbit -->

<PropertyList include="SpaceShuttle-common.xml">
<sim>
  <description>NASA Space Shuttle Atlantis approaching ISS</description>
  <long-description>
     The Space Shuttle was a partially re-usable low orbit spacecraft operated by NASA from 1981 to 2011. This mission phase puts the Shuttle into a 320 km orbit in the vicinity of ISS with all systems configured for orbital operations.
  </long-description>
  <variant-of>SpaceShuttle-launch</variant-of>
  <presets>
	<altitude-ft>1500000.0</altitude-ft>
	<stage type="int">6</stage>
  </presets>
  <startup>
    <splash-texture>Aircraft/SpaceShuttle/SpaceShuttle-orbit-splash.png</splash-texture>
  </startup>
 <previews>
      <preview>
        <type>exterior</type>
        <splash type="bool">true</splash>
        <path>Pics/iss-splash01.png</path>
      </preview>
  </previews>
  <config>
    <shuttle>
      <prelaunch-flag type="int">0</prelaunch-flag>
    </shuttle>
  </config>
  <menubar>
     <default>
	<menu n="51">
	      <label>Payload Operations</label>

	      <item>
	       <label>Payload bay floodlights</label>
	       <binding>
		<command>nasal</command>
		<script>SpaceShuttle.pb_floodlight_dlg.open()</script>
	       </binding>
	      </item>

	      <item>
	       <label>RMS arm deployment</label>
	       <binding>
		<command>nasal</command>
		<script>SpaceShuttle.rms_deploy_dlg.open()</script>
	       </binding>
	      </item>

	      <item>
	       <label>RMS arm operation</label>
	       <binding>
		<command>nasal</command>
		<script>SpaceShuttle.rms_operation_dlg.open()</script>
	       </binding>
	      </item>

	      <item>
	       <label>Payload retention</label>
	       <binding>
		<command>nasal</command>
		<script>SpaceShuttle.pl_retention_dlg.open()</script>
	       </binding>
	      </item>

	      <item>
	       <label>RMS Pyro</label>
	       <binding>
		<command>nasal</command>
		<script>SpaceShuttle.rms_pyro_dlg.open()</script>
	       </binding>
	      </item>
	     </menu>
     </default>
  </menubar>
</sim>

<fdm>
   <jsbsim>
	<systems>
	   <dps>
		<ops type="int">2</ops>
		<major-mode type="int">201</major-mode>
		<ops-bfs type="int">1</ops-bfs>
		<major-mode-bfs type="int">104</major-mode-bfs>
	   </dps>
	</systems>
   </jsbsim>
</fdm>



</PropertyList>
