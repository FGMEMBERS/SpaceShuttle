<?xml version="1.0"?>

<!-- this puts the Shuttle onto a gliding path -->

<PropertyList include="SpaceShuttle-common.xml">
<sim>
  <description>NASA Space Shuttle Atlantis on final</description>
  <long-description>
     The Space Shuttle was a partially re-usable low orbit spacecraft operated by NASA from 1981 to 2011. This mission phase finds the Shuttle at 12.000 ft in final approach to the runway with about a minute of flight to go to touchdown.
  </long-description>
  <variant-of>SpaceShuttle-launch</variant-of>
  <presets>
	<altitude-ft>11000.0</altitude-ft>
	<pitch-deg>-5.0</pitch-deg>	
	<stage type="int">4</stage>
  </presets>
  <!--<startup>
    <splash-texture>Aircraft/SpaceShuttle/SpaceShuttle-approach-splash.png</splash-texture>
  </startup>-->
 <previews>
      <preview>
        <type>exterior</type>
        <splash type="bool">true</splash>
        <path>Pics/approach-splash01.png</path>
      </preview>
  </previews>
  <config>
    <shuttle>
      <prelaunch-flag type="int">1</prelaunch-flag>
    </shuttle>
  </config>
</sim>

<fdm>
   <jsbsim>
	<systems>
	   <dps>
		<ops type="int">3</ops>
		<major-mode type="int">305</major-mode>
	   </dps>
	</systems>
   </jsbsim>
</fdm>

</PropertyList>
