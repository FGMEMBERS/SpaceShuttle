<?xml version="1.0"?>

<!-- this puts the Shuttle into the entry interface -->

<PropertyList include="SpaceShuttle-set.xml">
<sim>
  <description>NASA Space Shuttle Atlantis (re-entry)</description>
  <variant-of>SpaceShuttle</variant-of>
  <presets>
	<altitude-ft>400000.0</altitude-ft>
	<stage type="int">2</stage>
  </presets>
  <startup>
    <splash-texture>Aircraft/SpaceShuttle/SpaceShuttle-entry-splash.png</splash-texture>
  </startup>
</sim>

<fdm>
   <jsbsim>
	<systems>
	   <dps>
		<ops type="int">3</ops>
		<major-mode type="int">304</major-mode>
	   </dps>
	</systems>
   </jsbsim>
</fdm>


</PropertyList>
