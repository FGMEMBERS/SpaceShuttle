<?xml version="1.0"?>

<!-- this puts the Shuttle into the entry interface -->

<PropertyList include="SpaceShuttle-common.xml">
<sim>
  <description>NASA Space Shuttle Atlantis on re-entry</description>
  <long-description>
     The Space Shuttle was a partially re-usable low orbit spacecraft operated by NASA from 1981 to 2011. In this mission phase, the Shuttle is in space, on a descending trajectory into the atmosphere, with all systems configured for entry.
  </long-description>
  <variant-of>SpaceShuttle-launch</variant-of>
  <presets>
	<altitude-ft>400000.0</altitude-ft>
	<stage type="int">2</stage>
  </presets>
  <startup>
    <splash-texture>Aircraft/SpaceShuttle/SpaceShuttle-entry-splash.png</splash-texture>
  </startup>
 <previews>
      <preview>
        <type>exterior</type>
        <splash type="bool">true</splash>
        <path>Pics/entry-splash01.png</path>
      </preview>
  </previews>
  <config>
    <shuttle>
      <prelaunch-flag type="int">0</prelaunch-flag>
    </shuttle>
  </config>
</sim>

<fdm>
   <jsbsim>
	<systems>
	   <dps>
		<ops type="int">3</ops>
		<major-mode type="int">304</major-mode>
		<ops-bfs type="int">3</ops-bfs>
		<major-mode-bfs type="int">304</major-mode-bfs>
	   </dps>
	</systems>
   </jsbsim>
</fdm>


</PropertyList>
