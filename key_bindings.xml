<?xml version="1.0" ?>

<PropertyList>

 <keyboard>

   <key n="1"> 
    <name>Ctrl+a</name>
    <desc>COAS attitude reference</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.coas_att_ref()</script>
    </binding>
   </key>

   <key n="2"> 
    <name>Ctrl+b</name>
    <desc>BFS takeover</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.bfs_takeover()</script>
    </binding>
   </key>

   <key n="4"> 
    <name>Ctrl+d</name>
    <desc>Force external tank drop</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.force_external_tank_separate()</script>
    </binding>
   </key>

   <key n="5">
    <name>Ctrl+e</name>
    <desc>Cutoff switch engine 3</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.ssme_cutoff(1)</script>
    </binding>
   </key>

   <key n="6">
    <name>Ctrl+f</name>
    <desc>Toggle forward RCS pod fuel dump</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.toggle_fwd_fuel_dump()</script>
    </binding>
   </key>

   <key n="7">
    <name>Ctrl+g</name>
    <desc>Arm landing gear</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.arm_gear()</script>
    </binding>
   </key>

   <key n="13"> 
    <name>Ctrl+m</name>
    <desc>Switch major FCS control modes</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.switch_major_control_mode()</script>
    </binding>
   </key>

   <key n="15"> 
    <name>Ctrl+o</name>
    <desc>Toggle OMS fuel dump</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.toggle_oms_fuel_dump()</script>
    </binding>
   </key>

   <key n="17">
    <name>Ctrl+q</name>
    <desc>Cutoff switch engine 1</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.ssme_cutoff(2);</script>
    </binding>
   </key>

   <key n="21">
    <name>Ctrl+u</name>
    <desc>Undock</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.undock_iss();</script>
    </binding>
   </key>


   <key n="22">
    <name>Ctrl+v</name>
    <desc>Shuttle View Manager</desc>
    <binding>
     <command>property-assign</command>
     <property>/controls/shuttle/view-manager-flag</property>
     <value type="int">1</value>
    </binding>
   </key>


   <key n="23">
    <name>Ctrl+w</name>
    <desc>Cutoff switch engine 2</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.ssme_cutoff(0)</script>
    </binding>
   </key>

   <key n="67">
    <name>Shift+c</name>
    <desc>Arm and deploy drag chute</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.arm_drag_chute()</script>
    </binding>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.deploy_chute()</script>
    </binding>
   </key>

   <key n="69">
    <name>shift+e</name>
    <desc>start/finish EVA</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.toggle_EVA()</script>
    </binding>
   </key>

   <key n="70">
    <name>Shift+f</name>
    <desc>trim body flap down</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.bodyflap_down()</script>
    </binding>
   </key>

   <key n="72">
    <name>Shift+h</name>
    <desc>Cycle declutter</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.declutter()</script>
    </binding>
   </key>

   <key n="73">
    <name>Shift+i</name>
    <desc>Ignition</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.ignition()</script>
    </binding>
   </key>


   <key n="83">
    <name>S</name>
    <desc>decrease speedbrake</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.decrease_speedbrake()</script>
    </binding>
   </key>

   <key n="91">
    <name>[</name>
    <desc>Move rudder left</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
     <command>property-adjust</command>
     <property>/controls/flight/rudder</property>
     <step type="double">-0.05</step>
    </binding>
   </key>

   <key n="93">
    <name>]</name>
    <desc>Move rudder right</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
     <command>property-adjust</command>
     <property>/controls/flight/rudder</property>
     <step type="double">0.05</step>
    </binding>
   </key>

   <key n="99">
    <name>c</name>
    <desc>Jettison drag chute</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.jettison_drag_chute()</script>
    </binding>
   </key>

   <key n="100">
    <name>d</name>
    <desc>Drop external tank</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.external_tank_separate()</script>
    </binding>
   </key>

   <key n="102">
    <name>f</name>
    <desc>Trim body flap up</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.bodyflap_up()</script>
    </binding>
   </key>

   <key n="103">
    <name>g</name>
    <desc>Disable gear up</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.gear_up_message()</script>
    </binding>
   </key>

   <key n="109">
    <name>m</name>
    <desc>RCS mode</desc>
    <repeatable type="bool">false</repeatable>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.switch_control_mode()</script>
    </binding>
   </key>

   <key n="115">
    <name>s</name>
    <desc>increase speedbrake</desc>
    <binding>
     <command>nasal</command>
     <script>SpaceShuttle.increase_speedbrake()</script>
    </binding>
   </key>

</keyboard>


</PropertyList>
