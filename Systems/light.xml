                <product>
                    <property>systems/light/cabinlight7a-intensity</property>
                    <property>systems/light/console-eff-norm</property>
                </product>
            </function>
		</fcs_function>
        <fcs_function name="systems/light/cabinlight8-norm-tied">
            <function>
