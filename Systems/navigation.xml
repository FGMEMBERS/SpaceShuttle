<?xml version="1.0"?>

<system>

	<channel name="Radar altimeter">

		<switch name="systems/navigation/radar-alt-available">
			<default value="0.0"/>
			<test logic="OR" value="1.0">
				systems/navigation/radar-altimeter-1-switch == 1
				systems/navigation/radar-altimeter-2-switch == 1
			</test>
		</switch>
	
		<sensor name="systems/navigation/radar-alt-ft">
			<input>/position/altitude-agl-ft</input>
			<lag>0.1</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.01</noise>
		</sensor>
	</channel>

	<channel name="Air data probes">

	
		<sensor name="systems/navigation/air-data-left-1-alt-ft">
			<input>/position/altitude-ft</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-left-3-alt-ft">
			<input>/position/altitude-ft</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-right-2-alt-ft">
			<input>/position/altitude-ft</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-right-4-alt-ft">
			<input>/position/altitude-ft</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-left-1-mach">
			<input>velocities/mach</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-left-3-mach">
			<input>velocities/mach</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-right-2-mach">
			<input>velocities/mach</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-right-4-mach">
			<input>velocities/mach</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-left-1-alpha">
			<input>aero/alpha-deg</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-left-3-alpha">
			<input>aero/alpha-deg</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-right-2-alpha">
			<input>aero/alpha-deg</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>

		<sensor name="systems/navigation/air-data-right-4-alpha">
			<input>aero/alpha-deg</input>
			<lag>0.3</lag>
			<noise variation="PERCENT" distribution="GAUSSIAN">0.0001</noise>
		</sensor>


	</channel>


	<channel name="IMU accelerometers">

		<accelerometer name="systems/navigation/acc-x">
  			<location unit="M">
    				<x> 2.7 </x>
    				<y> 0.0 </y>
   				<z> -2.7 </z>
  			</location>
  			<orientation unit="DEG">
    				<pitch> 0.0 </pitch>
    				<roll>  0.0 </roll>
    				<yaw> 	0.0 </yaw>
  			</orientation>
  			<axis> X</axis>
  			<lag> 0.0 </lag>
  			<noise variation="PERCENT" distribution="GAUSSIAN"> 0.01 </noise>
			<output>systems/navigation/acceleration-x</output>
		</accelerometer>

		<accelerometer name="systems/navigation/acc-y">
  			<location unit="M">
    				<x> 2.7 </x>
    				<y> 0.0 </y>
   				<z> -2.7 </z>
  			</location>
  			<orientation unit="DEG">
    				<pitch> 0.0 </pitch>
    				<roll>  0.0 </roll>
    				<yaw> 	0.0 </yaw>
  			</orientation>
  			<axis> Y</axis>
  			<lag> 0.0 </lag>
  			<noise variation="PERCENT" distribution="GAUSSIAN"> 0.01 </noise>
			<output>systems/navigation/acceleration-y</output>
		</accelerometer>

		<accelerometer name="systems/navigation/acc-z">
  			<location unit="M">
    				<x> 2.7 </x>
    				<y> 0.0 </y>
   				<z> -2.7 </z>
  			</location>
  			<orientation unit="DEG">
    				<pitch> 0.0 </pitch>
    				<roll>  0.0 </roll>
    				<yaw> 	0.0 </yaw>
  			</orientation>
  			<axis> Z</axis>
  			<lag> 0.0 </lag>
  			<noise variation="PERCENT" distribution="GAUSSIAN"> 0.01 </noise>
			<output>systems/navigation/acceleration-z</output>
		</accelerometer>

	</channel>

</system>
