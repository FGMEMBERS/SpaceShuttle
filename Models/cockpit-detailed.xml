<PropertyList>
    <path>cockpit-detailed.ac</path>
    <nopreview/>

    <!-- grain -->
    <!--effect>
        <inherits-from>Aircraft/SpaceShuttle/Models/Effects/Interior/velcro</inherits-from>
    </effect-->
    <effect>
        <inherits-from>Aircraft/SpaceShuttle/Models/Effects/Interior/framing-detailed</inherits-from>
        <object-name>aft_base_set</object-name>
        <object-name>roof_assembly</object-name>
    </effect>

    <!-- implicit lighting -->
    <effect>
        <inherits-from>Aircraft/SpaceShuttle/Models/Effects/Interior/shuttle-interior-det-panel-center</inherits-from>
        <!-- Panels -->
        <object-name>O2-panel</object-name>
        <object-name>O15-panel</object-name>
        <!-- Panels O7-->
        <object-name>O7-panel</object-name>
        <object-name>O7-fasteners</object-name>
        <object-name>O7-guards</object-name>
        <object-name>gps1-preampl</object-name>
        <object-name>gps2-preampl</object-name>
        <object-name>gps3-preampl</object-name>
        <object-name>gps1-encrypt</object-name>
        <object-name>gps2-encrypt</object-name>
        <object-name>gps3-encryptpp</object-name>
        <object-name>aft-left-rcs-man-isol-1</object-name>
        <object-name>aft-left-rcs-man-isol-2</object-name>
        <object-name>aft-left-rcs-man-isol-3</object-name>
        <object-name>aft-left-rcs-man-isol-4</object-name>
        <object-name>aft-left-rcs-man-isol-5</object-name>
        <object-name>aft-right-rcs-man-isol-1</object-name>
        <object-name>aft-right-rcs-man-isol-2</object-name>
        <object-name>aft-right-rcs-man-isol-3</object-name>
        <object-name>aft-right-rcs-man-isol-4</object-name>
        <object-name>aft-right-rcs-man-isol-5</object-name>
        <object-name>left-rcs-cf-12</object-name>
        <object-name>left-rcs-cf-345</object-name>
        <object-name>right-rcs-cf-12</object-name>
        <object-name>right-rcs-cf-345</object-name>
        <object-name>master-rcs-cf</object-name>
        <object-name>left-rcs-tank-isol-12</object-name>
        <object-name>left-rcs-tank-isol-a345</object-name>
        <object-name>left-rcs-tank-isol-b345</object-name>
        <object-name>right-rcs-tank-isol-12</object-name>
        <object-name>right-rcs-tank-isol-a345</object-name>
        <object-name>right-rcs-tank-isol-b345</object-name>
        <object-name>left-rcs-he-oxid</object-name>
        <object-name>left-rcs-he-fuel</object-name>
        <object-name>right-rcs-he-oxid</object-name>
        <object-name>right-rcs-he-fuel</object-name>
        <object-name>aft-left-rcs-he-fuel-cvr</object-name>
        <object-name>aft-left-rcs-he-oxid-cvr</object-name>
        <object-name>aft-right-rcs-he-fuel-cvr</object-name>
        <object-name>aft-right-rcs-he-oxid-cvr</object-name>
        <object-name>left-man-isol-cvr</object-name>
        <object-name>left-tank-isol-fuel-cvr</object-name>
        <object-name>left-tank-isol-oxid-cvr</object-name>
        <object-name>right-man-isol-cvr</object-name>
        <object-name>right-tank-isol-fuel-cvr</object-name>
        <object-name>right-tank-isol-oxid-cvr</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/SpaceShuttle/Models/Effects/Interior/shuttle-interior-det-overhead-left</inherits-from>
        <!-- Panels -->
        <object-name>O1-panel</object-name>
        <object-name>O5-panel</object-name>
        <object-name>O6-panel</object-name>
        <object-name>O13-panel</object-name>
        <object-name>O14-panel</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/SpaceShuttle/Models/Effects/Interior/shuttle-interior-det-overhead-right</inherits-from>
        <!-- Panels -->
        <object-name>O3-panel</object-name>
        <object-name>O8-panel</object-name>
        <object-name>O9-panel</object-name>
        <object-name>O16-panel</object-name>
        <object-name>O17-panel</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/SpaceShuttle/Models/Effects/Interior/shuttle-interior-det-aft-panel-center</inherits-from>
        <!-- cabin -->
        <object-name>aft_equipment_group</object-name>
        <!-- misc -->
        <object-name>egress-system</object-name>
    </effect>

    <!--Remove Covers -->
    <animation>
        <type>pick</type>
        <object-name>aft-left-rcs-he-oxid-cvr</object-name>
        <object-name>aft-left-rcs-he-fuel-cvr</object-name>
        <object-name>aft-right-rcs-he-oxid-cvr</object-name>
        <object-name>aft-right-rcs-he-fuel-cvr</object-name>
        <object-name>left-tank-isol-oxid-cvr</object-name>
        <object-name>left-tank-isol-fuel-cvr</object-name>
        <object-name>right-tank-isol-oxid-cvr</object-name>
        <object-name>right-tank-isol-fuel-cvr</object-name>
        <object-name>left-man-isol-cvr</object-name>
        <object-name>right-man-isol-cvr</object-name>
        <property>/sim/model/panel/cover/O7-covers-visible</property>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/sim/model/panel/cover/O7-covers-visible</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>remove-covers</tooltip-id>
                <label>Remove Cover</label>
                <property>/sim/model/panel/cover/O7-covers-visible</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>select</type>
        <object-name>aft-left-rcs-he-oxid-cvr</object-name>
        <object-name>aft-left-rcs-he-fuel-cvr</object-name>
        <object-name>aft-right-rcs-he-oxid-cvr</object-name>
        <object-name>aft-right-rcs-he-fuel-cvr</object-name>
        <object-name>left-tank-isol-oxid-cvr</object-name>
        <object-name>left-tank-isol-fuel-cvr</object-name>
        <object-name>right-tank-isol-oxid-cvr</object-name>
        <object-name>right-tank-isol-fuel-cvr</object-name>
        <object-name>left-man-isol-cvr</object-name>
        <object-name>right-man-isol-cvr</object-name>
        <condition>
            <property>/sim/model/panel/cover/O7-covers-visible</property>
        </condition>
    </animation>

</PropertyList>
