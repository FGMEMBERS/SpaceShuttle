<PropertyList>
  
	<path>srb.ac</path>
		
<offsets>
  <heading-deg>-180</heading-deg>
  <roll-deg>90</roll-deg>
</offsets>  

<animation>
<type>select</type>
<object-name>srb</object-name>
<condition>
	<not>
		<property>/controls/shuttle/SRB-static-model</property>
		<value>1</value>
	</not>
</condition>
</animation>

<model>
   <path>Aircraft/SpaceShuttle/Models/Effects/SRB_flame.xml</path>
    <offsets>
		 <x-m>-14.5</x-m>
		 <y-m>0</y-m>
		 <z-m>0</z-m>
		 <pitch-deg>180</pitch-deg>
		 <roll-deg>0</roll-deg>
	 </offsets>	
  </model>

<model>
   <path>Aircraft/SpaceShuttle/Models/Effects/SRB_separation_motor_flame.xml</path>
    <condition>
	<greater-than>
		<property>/controls/shuttle/forces/srb1/force-lb</property>
		<value>0.0</value>
	</greater-than>
    </condition>
    <offsets>
		 <x-m>-22.0</x-m>
		 <y-m>0</y-m>
		 <z-m>-2.0</z-m>
		 <pitch-deg>90</pitch-deg>
		 <roll-deg>20</roll-deg>
	 </offsets>	
  </model>

<model>
   <path>Aircraft/SpaceShuttle/Models/Effects/SRB_separation_motor_flame.xml</path>
    <condition>
	<greater-than>
		<property>/controls/shuttle/forces/srb1/force-lb</property>
		<value>0.0</value>
	</greater-than>
    </condition>
    <offsets>
		 <x-m>19.0</x-m>
		 <y-m>0</y-m>
		 <z-m>-1.0</z-m>
		 <pitch-deg>90</pitch-deg>
		 <roll-deg>20</roll-deg>
	 </offsets>	
  </model>

