<PropertyList>

 <path>strobe-red.ac</path>

 <animation>
  <type>noshadow</type>
  <object-name>strobe</object-name>
 </animation>

 <animation>
  <type>select</type>
  <object-name>strobe</object-name>
    <condition>
	<greater-than>
	<property>sim/multiplay/generic/float[18]</property>
	<value>0</value>
	</greater-than>
    </condition>
 </animation>

 <animation>
  <type>material</type>
  <object-name>strobe</object-name>
  <threshold>0.001</threshold>
 </animation>

 <animation>
  <type>billboard</type>
  <object-name>strobe</object-name>
 </animation>
 
 <animation>
  <type>scale</type>
  <object-name>strobe</object-name>
    <condition>
	<greater-than>
	<property>sim/multiplay/generic/float[18]</property>
	<value>0</value>
	</greater-than>
    </condition>
  <scale>1.0</scale>
  <x-min>4</x-min>
  <y-min>4</y-min>
  <z-min>4</z-min>
  <x-factor>1.1</x-factor>
  <y-factor>1.1</y-factor>
  <z-factor>1.1</z-factor>
 </animation>

</PropertyList>