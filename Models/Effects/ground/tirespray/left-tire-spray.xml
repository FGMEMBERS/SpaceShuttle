<?xml version="1.0"?>

<PropertyList>

    <!--params>
        <left_tire_spray_speed>
			<property>/gear/gear[1]/sprayspeed-ms</property>
		</left_tire_spray_speed>
        <left_tire_spray_density>
			<property>/gear/gear[1]/spray-density</property>
		</left_tire_spray_density>
    </params-->

	<particlesystem>

		<name>left-tire-spray</name>
		<texture>Effects/ground/tirespray/smoke.png</texture>
		<emissive>false</emissive>
		<lighting>false</lighting>

		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</offsets>

		<condition>
            <greater-than>
			    <!--property alias="/params/left_tire_spray_density"/-->
				<property>/gear/gear[1]/spray-density</property>
                <value>0.0</value>
            </greater-than>
			<equals>
				<property>/fdm/jsbsim/systems/failures/gearstrut-left-condition</property>
				<value>1</value>
			</equals>
		</condition>

		<attach>world</attach>

		<placer>
			<type>segments</type>
			<vertex>
				<x-m>0</x-m>
				<y-m>0</y-m>
				<z-m>0</z-m>
			</vertex>
			<vertex>
				<x-m>1.5</x-m>
				<y-m>0</y-m>
				<z-m>0</z-m>
			</vertex>
				<vertex>
				<x-m>3</x-m>
				<y-m>0</y-m>
				<z-m>0</z-m>
			</vertex>
		</placer>

		<shooter>
			<theta-min-deg>45</theta-min-deg>
			<theta-max-deg>80</theta-max-deg>
			<phi-min-deg>-5</phi-min-deg>
			<phi-max-deg>5</phi-max-deg>
			<speed-mps>
			    <!--property alias="/params/left_tire_spray_speed"/-->
				<property>/gear/gear[1]/sprayspeed-ms</property>
				<spread>20</spread>
			</speed-mps>
			<rotation-speed>
				<x-max-deg-sec>15</x-max-deg-sec>
				<x-min-deg-sec>-15</x-min-deg-sec>
				<y-max-deg-sec>15</y-max-deg-sec>
				<y-min-deg-sec>-15</y-min-deg-sec>
				<z-max-deg-sec>15</z-max-deg-sec>
				<z-min-deg-sec>-15</z-min-deg-sec>
			</rotation-speed>
		</shooter>

		<counter>
			<particles-per-sec>
			    <!--property alias="/params/left_tire_spray_density"/-->
				<property>/gear/gear[1]/spray-density</property>
				<factor>2.5</factor>
				<spread>100</spread>
			</particles-per-sec>
        </counter>

		<align>billboard</align>

		<particle>
			<start>
				<color>
					<red>
						<value>0.95</value>
					</red>
					<green>
						<value>0.95</value>
					</green>
					<blue>
						<value>0.95</value>
					</blue>
					<alpha>
						<value>0.05</value>
					</alpha>
				</color>
				<size>
					<value>0.5</value>
				</size>
			</start>
			<end>
				<color>
					<red>
						<value>1</value>
					</red>
					<green>
						<value>1</value>
					</green>
					<blue>
						<value>1</value>
					</blue>
					<alpha>
						<value>0.020</value>
					</alpha>
				</color>
				<size>
					<value>10</value>
				</size>
			</end>
			<life-sec>
				<value>1.5</value>
			</life-sec>
			<mass-kg>0.025</mass-kg>
			<radius-m>0.125</radius-m>
		</particle>

		<program>
			<fluid>air</fluid>
			<gravity>true</gravity>
			<wind>true</wind>
		</program>

	</particlesystem>

</PropertyList>
