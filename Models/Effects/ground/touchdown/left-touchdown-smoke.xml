<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <params>
    <left_touchdown_ground_effect>
	  <!--property>/gear/gear[1]/tyre-smoke</property-->
	  <property>/fdm/jsbsim/ground/left-touchdown-ground-effect-speed-kt-actual</property>
    </left_touchdown_ground_effect>
  </params>
 
  <particlesystem>

    <name>left-touchdown-vortex</name>
    <texture>tyresmoke.png</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>

	<offsets>
