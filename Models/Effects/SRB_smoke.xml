<PropertyList>

<particlesystem>
	 <!-- <type>trail</type>-->
	 <name>gear_smoke_right</name>
	 <texture>smoke.png</texture>
	 <emissive>false</emissive>
	 <lighting>true</lighting>
	                <x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
			<roll-deg>0.0</roll-deg>
			<pitch-deg>90.0</pitch-deg>
			<heading-deg>0.0</heading-deg>
	<condition>
	<and>
		<or>
    		<greater-than>
     			<property>/engines/engine[3]/thrust_lb</property>
     			<value>100</value>
    		</greater-than>
		<greater-than>
     			<property>/engines/engine[4]/thrust_lb</property>
     			<value>100</value>
    		</greater-than>
		</or>
		<!--<equals>
			<property>/controls/shuttle/SRB-static-model</property>
			<value>1</value>
		</equals>-->
	</and>
	</condition>
		 
	 <attach>world</attach>
	 
	 <placer>
		<type>sector</type>
		<radius-min-m>15.0</radius-min-m> 
		<radius-max-m>35.0</radius-max-m> 
	 </placer>
	 
	 <shooter>
		 <theta-min-deg>85</theta-min-deg>
		 <theta-max-deg>95</theta-max-deg>
		 <phi-min-deg>0.1</phi-min-deg>
		 <phi-max-deg>0.1</phi-max-deg>
		 <speed>
			 <value>150</value>
			 <spread>5</spread>
		 </speed>
		 <rotation-speed>
			<x-min-deg-sec>1</x-min-deg-sec>
			<y-min-deg-sec>1</y-min-deg-sec>
			<z-min-deg-sec>1</z-min-deg-sec>
			<x-max-deg-sec>5</x-max-deg-sec>
			<y-max-deg-sec>5</y-max-deg-sec>
			<z-max-deg-sec>5</z-max-deg-sec>
		 </rotation-speed>
	 </shooter>
	 
	 <counter>
		 <particles-per-sec>
			 <value>15</value>
			 <spread>0</spread>
		 </particles-per-sec>
	 </counter>
	 
	 <align>billboard</align>
	 
	 <particle>
		 <start>
			 <color>
				<red>
						<value>0.95</value>
					</red>
					<green>
						<value>0.75</value>
					</green>
					<blue>
						<value>0.5</value>
					</blue>
					<alpha>
						<value>0.8</value>
					</alpha>
			 </color>
			 <size>
				 <value>35.2</value>
			 </size>
		 </start>
		 <end>
			 <color>
				 <red>
					 <value>0.95</value>
				 </red>
				 <green>
					 <value>0.75</value>
				 </green>
				 <blue>
					 <value>0.5</value>
				 </blue>
				 <alpha>
					 <value>0.98</value>
				 </alpha>
			 </color>
			 <size>
				 <value>150.0</value>
			 </size>
		 </end>
		 <life-sec>
			 <value>120</value>
		 </life-sec>
		 <mass-kg>0.35</mass-kg>
		 <radius-m>0.70</radius-m>
	 </particle>
	 
	 <program>
		 <fluid>air</fluid>
		 <gravity type="bool">true</gravity>
		 <wind type="bool">true</wind>
	 </program>
	 
</particlesystem>

</PropertyList>

