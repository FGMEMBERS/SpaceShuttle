<?xml version="1.0"?>

<PropertyList>

 <model>
   <path>Aircraft/SpaceShuttle/Models/Effects/entry_flame_medium.xml</path>
    <offsets>
		 <x-m> 0.0</x-m>
		 <y-m> 0.0</y-m>
		 <z-m> 0.0</z-m>
		 <pitch-deg>0</pitch-deg>
		 <roll-deg>0</roll-deg>
	 </offsets>	
  </model>

  <animation>
  	<type>translate</type>  
	<property>/fdm/jsbsim/systems/various/debris-separation</property>
	<factor>400.0</factor>
  	<axis>
   		<x> 1.0</x>
   		<y>-0.2</y>
   		<z>0.05</z>
  	</axis>
	</animation> 

   <animation>
  	<type>rotate</type>
  	<property>/orientation/heading-deg</property>
  	<factor>1.0</factor>
  	<offset-deg>0</offset-deg>
  	<center>
   		<x-m> 0.0</x-m>
   		<y-m> 0.0</y-m>
   		<z-m> 0.0</z-m>
  	</center>
  	<axis>
   		<x>0</x>
   		<y>0</y>
   		<z>1</z>
  	</axis>
  </animation>

  <animation>
  	<type>rotate</type>
  	<property>/orientation/pitch-deg</property>
  	<factor>-1.0</factor>
  	<offset-deg>0</offset-deg>
  	<center>
   		<x-m> 0.0</x-m>
   		<y-m> 0.0</y-m>
   		<z-m> 0.0</z-m>
  	</center>
  	<axis>
   		<x>0</x>
   		<y>1</y>
   		<z>0</z>
  	</axis>
 </animation>

  <animation>
  	<type>rotate</type>
  	<property>/orientation/roll-deg</property>
  	<factor>1.0</factor>
  	<offset-deg>0</offset-deg>
  	<center>
   		<x-m> 0.0</x-m>
   		<y-m> 0.0</y-m>
   		<z-m> 0.0</z-m>
  	</center>
  	<axis>
   		<x>1</x>
   		<y>0</y>
   		<z>0</z>
  	</axis>
 </animation>




</PropertyList>
