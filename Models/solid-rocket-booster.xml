<PropertyList>
  
	<path>srb.ac</path>
		
<offsets>
  <heading-deg>-180</heading-deg>
</offsets>  

<animation>
<type>select</type>
 
 <condition>
  <and>
    <equals>
     <property>sim/multiplay/generic/int[7]</property>
     <value>1</value>
    </equals>
    
    <greater-than>
     <property>sim/multiplay/generic/float[5]</property>
     <value>10</value>
    </greater-than>
  </and>
 </condition>
 
</animation>

</PropertyList>
 