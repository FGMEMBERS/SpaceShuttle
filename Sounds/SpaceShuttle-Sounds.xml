<PropertyList>

<!-- Sounds -->

	<fx>
	  
	 
	<!-- Startup on Runway, environment wind -->

	<wind>
		<name>wind</name>
		<mode>looped</mode>
		<path>Sounds/wind-8khz.wav</path>
		<volume>
			<property>environment/wind-speed-kt</property>
			<factor>0.04</factor>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>0.10</max>
		</volume>
		<pitch>
			<property>environment/wind-speed-kt</property>
			<factor>0.04</factor>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>1.0</max>
		</pitch>
	<condition>
         <and>             
			<less-than>
               <property>/position/altitude-agl-ft</property>
               <value>1000</value>
            </less-than>
			<not>
				<property>/sim/current-view/internal</property>
			</not>
         </and>
        </condition>
	<delay-sec>1</delay-sec>
	</wind> 

	<!-- dynamical pressure consists of two components - a low rumble for turbulence and a generic wind -->
	
	<qbar>
		<name>qbar</name>
		<mode>looped</mode>
		<!--<path>Sounds/wind.wav</path>-->
		<!--<path>Aircraft/SpaceShuttle/Sounds/Vostok-1-Deorbit-Burning.wav</path>-->
		<path>Sounds/rumble-rough.wav</path>
		<condition>
			<greater-than>
				<property>/fdm/jsbsim/aero/qbar-psf</property>
				<value>10.0</value>
			</greater-than>
		</condition>
		<volume>
			<property>fdm/jsbsim/systems/various/wind-volume</property>
			<factor>5.0</factor>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>1.0</max>
		</volume>
		<pitch>
			<property>fdm/jsbsim/systems/various/wind-volume</property>
			<factor>0.01</factor>
			<offset>0.8</offset>
		</pitch>
	</qbar>  
	
	<qbar_alt>
		<name>qbar_alt</name>
		<mode>looped</mode>
		<path>Sounds/wind.wav</path>
		<!--<path>Aircraft/SpaceShuttle/Sounds/Vostok-1-Deorbit-Burning.wav</path>-->
		<!--<path>Sounds/rumble-rough.wav</path>-->
		<condition>
			<greater-than>
				<property>/fdm/jsbsim/aero/qbar-psf</property>
				<value>10.0</value>
			</greater-than>
		</condition>
		<volume>
			<property>fdm/jsbsim/systems/various/wind-volume</property>
			<factor>0.2</factor>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>1.0</max>
		</volume>
		<pitch>
			<property>fdm/jsbsim/systems/various/wind-volume</property>
			<factor>0.01</factor>
			<offset>0.15</offset>
		</pitch>
	</qbar_alt>

	<!-- fan inside the cabin -->

	<fan>
		<name>fan</name>
		<mode>looped</mode>
		<path>Sounds/fan.wav</path>
		<condition>
			<and>
			<property>/sim/current-view/internal</property>
			<greater-than>
				<property>/fdm/jsbsim/systems/electrical/total-available-power-kW</property>
				<value>0.0</value>
			</greater-than>
			</and>
		</condition>
		<volume>
			<factor>1.0</factor>
			<offset>0.0</offset>
			<min>0.1</min>
			<max>0.1</max>
		</volume>
	</fan>

	
	<!-- Booster  -->

	<booster>
		<name>booster</name>
		<mode>looped</mode>
		<path>Aircraft/SpaceShuttle/Sounds/Vostok-1-Stage-1-2-Engines-Internal.wav</path>
		<condition>
			<and>
			<property>/sim/current-view/internal</property>
			<equals>
				<property>/controls/shuttle/SRB-static-model</property>
				<value>1.0</value>
			</equals>
			</and>
		</condition>
		<volume>
			<property>/engines/engine[3]/thrust_lb</property>
			<factor>0.0001</factor>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>1.0</max>
		</volume>
		<pitch>
			<property>/controls/engines/engine[3]/throttle</property>
			<factor>0.14</factor>
		</pitch>
	</booster>
	
	<booster-external>
		<name>booster-external</name>
		<mode>looped</mode>
		<path>Aircraft/SpaceShuttle/Sounds/Vostok-1-Stage-1-2-Engines-Internal.wav</path>
		<condition>
			<and>
			<not>
			<property>/sim/current-view/internal</property>
			</not>
			<equals>
				<property>/controls/shuttle/SRB-static-model</property>
				<value>1.0</value>
			</equals>
			</and>
		</condition>
		<volume>
			<property>/fdm/jsbsim/systems/various/SRB-external-volume</property>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>1.0</max>
		</volume>
		<pitch>
			<property>/controls/engines/engine[3]/throttle</property>
			<factor>0.14</factor>
		</pitch>
	</booster-external>
	
	<!-- Main Engines -->
	
	<main>
		<name>main</name>
		<mode>looped</mode>
		<!--<path>Sounds/rumble.wav</path>-->
		<path>Sounds/exhaust_loop.wav</path>
		<condition>
			<property>/sim/current-view/internal</property>
		</condition>
		<volume>
			<property>/engines/engine[0]/thrust_lb</property>
			<factor>0.01</factor>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>1.0</max>
		</volume>	
		<pitch>
			<min>0.005</min>
			<max>0.005</max>
		</pitch>
	</main>
	
		<main-external>
		<name>main-external</name>
		<mode>looped</mode>
		<!--<path>Sounds/rumble.wav</path>-->
		<path>Sounds/exhaust_loop.wav</path>
		<condition>
		    <not>
			<property>/sim/current-view/internal</property>
			</not>
		</condition>
		<volume>
			<property>/fdm/jsbsim/systems/various/SSME-external-volume</property>
			<offset>0.0</offset>
			<min>0.0</min>
			<max>1.0</max>
		</volume>	
		<pitch>
			<min>0.005</min>
			<max>0.005</max>
		</pitch>
	</main-external>

	<!-- Booster separation-->
	
	<booster-separation>
		<name>booster-separation</name>
		<mode>once</mode>
		<path>Aircraft/SpaceShuttle/Sounds/Vostok-1-Fairings-Separation.wav</path>		
		  <condition>
		    <and>
		    <equals>
			<property>/controls/shuttle/SRB-static-model</property>
			<value>0</value>
		    </equals>
			<equals>
			 <property>/sim/presets/stage</property>
			 <value>0</value>
			</equals>
			<not>
			  <property>/controls/shuttle/SRB-sound-veto</property>
			</not>
			</and>
		  </condition>
		  <volume>
			<factor>1.0</factor>
			<offset>0.0</offset>
			<min>0.7</min>
			<max>0.7</max>
		</volume>
	</booster-separation>
	
		<!-- External Tank separation-->
	
	<tank-separation>
		<name>tank-separation</name>
		<mode>once</mode>
		<path>Aircraft/SpaceShuttle/Sounds/Vostok-1-Stage-1-Separation.wav</path>		
		  <condition>
		    <and>
		    <equals>
			<property>/controls/shuttle/ET-static-model</property>
			<value>0</value>
		    </equals>
			 <less-than>
			   <property>/sim/presets/stage</property>
			   <value>2</value>
			 </less-than>
			 <property>/sim/current-view/internal</property>
			 <not>
			  <property>/controls/shuttle/ET-sound-veto</property>
			</not>
			</and>
		  </condition>
		  <volume>
			<factor>1.0</factor>
			<offset>0.0</offset>
			<min>0.6</min>
			<max>0.6</max>
		</volume>
	</tank-separation>

        	<!-- OMS Main  -->
	
	<OMS>
		<name>OMS</name>
		<mode>looped</mode>
		<path>Aircraft/SpaceShuttle/Sounds/rumble.wav</path>		
		  <condition>
			<and>
		    <greater-than>
			<property>/engines/engine[5]/thrust_lb</property>
			<value>0</value>
		    </greater-than>
			<property>/sim/current-view/internal</property>
			</and>
		  </condition>
		  <volume>
			<min>0.6</min>
			<max>0.6</max>
		</volume>
	</OMS>
	
	

