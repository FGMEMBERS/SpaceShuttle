	<!-- doors  -->

	<doors>
		<name>doors</name>
		<mode>looped</mode>
		<path>Aircraft/SpaceShuttle/Sounds/Vostok-1-Radiators-Turn.wav</path>
		  
		  <condition>
		    <and>
		    <greater-than>
			<property>sim/multiplay/generic/float[3]</property>
			<value>0.01</value>
		    </greater-than>
		    <less-than>
			<property>sim/multiplay/generic/float[3]</property>
			<value>0.99</value>
		    </less-than>
		    </and>
		  </condition>
		  
		  <volume>
		    <property>sim/multiplay/generic/float[3]</property>
			<factor>1.0</factor>
			<offset>0.0</offset>
			<min>0.15</min>
			<max>0.15</max>
		</volume>
	</doors>

	<!-- Gears  -->

	<gears>
		<name>gears</name>
		<mode>once</mode>
		<path>Aircraft/SpaceShuttle/Sounds/gear.wav</path>
		  
		  <condition>
		    <and>
		    <greater-than>
			<property>gear/gear/position-norm</property>
			<value>0.01</value>
		    </greater-than>
		    <less-than>
			<property>gear/gear/position-norm</property>
			<value>0.99</value>
		    </less-than>
		    </and>
		  </condition>
		  
		  <volume>
		    <property>gear/gear/position-norm</property>
			<factor>1.0</factor>
			<offset>0.0</offset>
			<min>0.3</min>
			<max>0.3</max>
		</volume>
	</gears>

	
	<!-- Touchdown  -->

	<touchdown>
        <name>touchdown</name>
		<mode>once</mode>
        <path>Aircraft/SpaceShuttle/Sounds/touchdown.wav</path>
        <condition>
            <and>	      
				<greater-than>
						<property>/velocities/airspeed-kt</property>
				<value>140</value>
               </greater-than>
               <less-than>
                <property>velocities/vertical-speed-fps</property>
		<value>-0.1</value>
               </less-than>
				<or>
					<and>
						<greater-than>
							<property>/gear/gear[0]/compression-norm</property>
							<value>0.05</value>
						</greater-than>
						<equals>
							<property>/gear/gear[0]/wow</property>
							<value>1</value>
						</equals> 
					</and>
					<and>
						<greater-than>
							<property>/gear/gear[1]/compression-norm</property>
							<value>0.05</value>
						</greater-than>
						<equals>
							<property>/gear/gear[1]/wow</property>
							<value>1</value>
						</equals> 
					</and>
					<and>
						<greater-than>
							<property>/gear/gear[2]/compression-norm</property>
							<value>0.05</value>
						</greater-than>
						<equals>
							<property>/gear/gear[2]/wow</property>
							<value>1</value>
						</equals> 
					</and>  
				</or>
            </and>
        </condition>
        <volume>
            <property>sim/sound/volume</property>
        </volume>       
        <position>
            <x>-6.5</x>
            <y>0</y>
            <z>-5</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>40.0</max-dist>
	</touchdown>
	
	<!-- gear damage -->
	
	<gearbreak>
        <name>gearbreak</name>
		<mode>once</mode>
        <path>Sounds/crash.wav</path>
        <condition>
			<or>
				<and>
					<greater-than>
						<property>/gear/gear[0]/compression-norm</property>
						<value>0.05</value>
					</greater-than>
					<equals>
						<property>/gear/gear[0]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/fdm/jsbsim/systems/failures/gearstrut-nose-condition</property>
						<value>0</value>
					</equals>
				</and>
				<and>
					<greater-than>
						<property>/gear/gear[1]/compression-norm</property>
						<value>0.05</value>
					</greater-than>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/fdm/jsbsim/systems/failures/gearstrut-left-condition</property>
						<value>0</value>
					</equals>			
				</and>
				<and>
					<greater-than>
						<property>/gear/gear[2]/compression-norm</property>
						<value>0.05</value>
					</greater-than>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>1</value>
					</equals> 
					<equals>
						<property>/fdm/jsbsim/systems/failures/gearstrut-right-condition</property>
						<value>0</value>
					</equals>
				</and>  
			</or>			
        </condition>
        <volume>
            <property>sim/sound/volume</property>
        </volume>       
        <position>
            <x>-6.5</x>
            <y>0</y>
            <z>-5</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>100.0</max-dist>
	</gearbreak>
	
	<!-- rumble  -->

	<rumble>
		<name>rumble</name>
		<mode>looped</mode>
		<path>Aircraft/SpaceShuttle/Sounds/rumble.wav</path>
		<condition>
		  <or>
		  <and>
                   <greater-than>
                      <property>/gear/gear[1]/rollspeed-ms</property>
                      <value>5</value>
                   </greater-than>
		   <equals>
                      <property>/gear/gear[1]/wow</property>
                      <value>1</value>
                   </equals> 
		  </and>
		  <and>
                   <greater-than>
                      <property>/gear/gear[2]/rollspeed-ms</property>
                      <value>5</value>
                   </greater-than>
		   <equals>
                      <property>/gear/gear[2]/wow</property>
                      <value>1</value>
                   </equals> 
		  </and>
		  </or>
                </condition>
          <volume>
            <property>/gear/gear[1]/rollspeed-ms</property>            
            <factor>0.005</factor>
	    <min>0.2</min>
	    <max>1.0</max>
          </volume>          
        </rumble>
		
		
	<!-- orbiter breakup -->
	
	<explosion>
        <name>explosion</name>
		<mode>once</mode>
        <path>Sounds/crash.wav</path>
        <condition>
			<equals>
				<property>/sim/model/effects/explosion-smoke</property>
				<value>1.0</value>
			</equals>
        </condition>
        <volume>
            <property>sim/sound/volume</property>
        </volume>       
        <position>
            <x>-6.5</x>
            <y>0</y>
            <z>-5</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>1000.0</max-dist>
	</explosion>

    <!-- Switch click sound -->

    <switch>
        <name>click-avionics-switch</name>
        <mode>once</mode>
        <path>Sounds/click3.wav</path>
        <condition>
            <property>/sim/model/shuttle/sound/click-avionics</property>
        </condition>
        <position>
            <x>-11.8375</x>
            <y>  1.353 </y>
            <z> -0.6376</z>
        </position>
        <reference-dist>0.2</reference-dist>
        <max-dist>5.0</max-dist>
    </switch>

	</fx>

</PropertyList>
