<?xml version="1.0"?>

<PropertyList>
	<label>
		<name>Longitude</name>
		<condition>
			<not>
				<equals>
				<property>/sim/current-view/view-number</property>
				<value>0</value>
				</equals>
			</not>
		</condition>
		<width>1</width>
		<height>1</height>

		<halign>center</halign>
		<input>
			<property>/position/longitude-string</property>
		</input>
	</label>
</PropertyList>
