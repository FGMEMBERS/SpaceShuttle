		<y>50</y>
		<format>Roll rate:%2.2f deg/s</format>
		<halign>left</halign>
		<input>
			<property>orientation/roll-rate-degps</property>
		</input>
     </label>
     <label>
		<width>2</width>
		<height>2</height>
		<x>460</x>
		<y>40</y>
		<format>Yaw rate:%2.2f deg/s</format>
		<halign>left</halign>
		<input>
			<property>orientation/yaw-rate-degps</property>
		</input>
     </label>

