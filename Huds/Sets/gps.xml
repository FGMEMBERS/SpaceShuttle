<PropertyList>

	<!-- Orbital stuff -->
 	<label>
		<width>2</width>
		<height>2</height>
		<format>Apoapsis:%4.2f km</format>
		<halign>left</halign>
		<input>
			<property>/fdm/jsbsim/systems/orbital/apoapsis-indicated-km</property>
		</input>
       </label>	



	<label>
		<width>2</width>
		<height>2</height>
		<x>100</x>
		<format>Periapsis:%4.2f km</format>
		<halign>left</halign>
		<input>
			<property>/fdm/jsbsim/systems/orbital/periapsis-indicated-km</property>
		</input>
       </label>	

 	<label>
		<width>2</width>
		<height>2</height>
		<halign>left</halign>
		<y>10</y>
		<format>Altitude: %4.2f km</format>
		<halign>left</halign>
		<input>
			<property>/position/altitude-ft</property>
			<factor>0.0003048</factor>
		</input>
     </label>

     <label>
		<width>2</width>
		<height>2</height>
		<x>100</x>
		<y>10</y>
		<format>VerticalSpeed:%4d m/s</format>
		<halign>left</halign>
		<input>
			<property>velocities/vertical-speed-fps</property>
			<factor>0.3048</factor>
		</input>
     </label>

     <label>
		<width>2</width>
		<height>2</height>
		<y>50</y>
		<y>10</y>
		<format>%s</format>
		<halign>left</halign>
		<input>
			<property>/controls/shuttle/control-system-string</property>
		</input>
     </label>

	

    
    <label>
		<width>2</width>
		<height>2</height>
		<y>-41</y>
		<format>GS:%7.5fkm/s</format>
		<halign>left</halign>
		<input>
			<property>/instrumentation/gps/indicated-ground-speed-kt</property>
			<factor>0.00051444444444444</factor>
		</input>
     </label>
     <label>
		<width>2</width>
		<height>2</height>
		<y>-40</y>
		<x>90</x>
		<format>Mach:%4.2f</format>
		<halign>left</halign>
		<input>
			<property>/velocities/mach</property>
		</input>
     </label>

 <!--pitch, yaw and roll rate -->


     <label>
		<width>2</width>
		<height>2</height>
