		<y>60</y>
		<format>Pitch rate:%2.2f deg/s</format>
		<halign>left</halign>
		<input>
			<property>orientation/pitch-rate-degps</property>
		</input>
     </label>
      <label>
		<width>2</width>
		<height>2</height>
