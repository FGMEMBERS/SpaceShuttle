<?xml version="1.0"?>

<PropertyList>
	<name>flight_controls</name>
	<layout>vbox</layout>
	<default-padding>1</default-padding>
	<modal>false</modal>
	<width>500</width>

	<empty>
		<pref-height>6</pref-height>
	</empty>

	<text>
		<label>Flight controls</label>
	</text>

	<empty>
		<pref-height>4</pref-height>
	</empty>

	<hrule/>

  <group>
    <layout>table</layout>

    <text>
      <label>PITCH</label>
      <halign>left</halign>
      <row>0</row>
      <col>0</col>
    </text>

   <radio>
      <row>0</row>
      <col>1</col>
      <label>CSS</label>
      <halign>left</halign>
      <name>css-pitch</name>
      <property>/fdm/jsbsim/systems/ap/css-pitch-control</property>
      <live>true</live>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/automatic-pitch-control</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/css-pitch-control</property>
         <value>1</value>
      </binding>
    </radio>	

   <radio>
      <row>0</row>
      <col>2</col>
      <label>AUTO</label>
      <halign>left</halign>
      <name>auto-pitch</name>
      <property>/fdm/jsbsim/systems/ap/automatic-pitch-control</property>
      <live>true</live>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/css-pitch-control</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/automatic-pitch-control</property>
         <value>1</value>
      </binding>
    </radio>	

    <text>
      <label>ROLL/YAW</label>
      <halign>left</halign>
      <row>1</row>
      <col>0</col>
    </text>

  <radio>
      <row>1</row>
      <col>1</col>
      <label>CSS</label>
      <halign>left</halign>
      <name>css-roll</name>
      <property>/fdm/jsbsim/systems/ap/css-roll-control</property>
      <live>true</live>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/automatic-roll-control</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/css-roll-control</property>
         <value>1</value>
      </binding>
    </radio>	

   <radio>
      <row>1</row>
      <col>2</col>
      <label>AUTO</label>
      <halign>left</halign>
      <name>auto-roll</name>
      <property>/fdm/jsbsim/systems/ap/automatic-roll-control</property>
      <live>true</live>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/css-roll-control</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/ap/automatic-roll-control</property>
         <value>1</value>
      </binding>
    </radio>	


    <text>
      <label>SENSE</label>
      <halign>left</halign>
      <row>2</row>
      <col>0</col>
    </text>

   <radio>
      <row>2</row>
      <col>1</col>
      <label>+X</label>
      <halign>left</halign>
      <name>sense-X</name>
      <property>/fdm/jsbsim/systems/fcs/sense-X</property>
      <live>true</live>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-minus-X</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-minus-Z</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-X</property>
         <value>1</value>
      </binding>
    </radio>	

<radio>
      <row>2</row>
      <col>2</col>
      <label>-X</label>
      <halign>left</halign>
      <name>sense-minus-X</name>
      <property>/fdm/jsbsim/systems/fcs/sense-minus-X</property>
      <live>true</live>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-minus-X</property>
         <value>1</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-minus-Z</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-X</property>
         <value>0</value>
      </binding>
    </radio>	

<radio>
      <row>2</row>
      <col>3</col>
      <label>-Z</label>
      <halign>left</halign>
      <name>sense-minus-Z</name>
      <property>/fdm/jsbsim/systems/fcs/sense-minus-Z</property>
      <live>true</live>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-minus-X</property>
         <value>0</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-minus-Z</property>
         <value>1</value>
      </binding>
      <binding>
         <command>property-assign</command>
         <property>/fdm/jsbsim/systems/fcs/sense-X</property>
         <value>0</value>
      </binding>
    </radio>	

  </group>


	<empty>
		<pref-height>12</pref-height>
	</empty>

	<hrule/>

	<empty>
		<pref-height>20</pref-height>
	</empty>

	<button>
		<legend>Close</legend>
		<default>true</default>
		<key>Esc</key>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>

</PropertyList>
